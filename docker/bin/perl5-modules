#!/usr/bin/env bash

set -ex

repo=$1

cd /work/$repo
ok=0
(git diff --quiet && git diff --quiet --cached) || ok=1
echo $ok
if [[ $ok -ne 0 ]]; then
  echo "Repo not in clean state: '$repo'"
  exit 1
fi

if [[ -f Meta ]]; then
  zild dist
elif [[ lib/perl5/YAML/PP/Parser.pm ]]; then
  true
elif [[ -f dist.ini ]]; then
  dzil build
elif [[ -f Makefile.PL ]]; then
  perl Makefile.PL
  make dist
else
  echo "Unknown Perl build system"
fi

cpanm -n -L /work/build *.tar.gz
git clean -dxf

if [[ $(uname) == Darwin ]]; then
  uid=$(stat -f%u $0)
  gid=$(stat -f%g $0)
else
  uid=$(stat -c%u $0)
  gid=$(stat -c%g $0)
fi

chown -R $uid.$gid /work/build
