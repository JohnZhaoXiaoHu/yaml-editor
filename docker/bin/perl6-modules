#!/usr/bin/env bash

set -ex

repo=$1

cd /work/$repo
ok=0
(git diff --quiet && git diff --quiet --cached) || ok=1
echo $ok
if [[ $ok -ne 0 ]]; then
  echo "Repo not in clean state: '$repo'"
  exit 1
fi

panda install --prefix=/work/build .

git clean -dxf

if [[ $(uname) == Darwin ]]; then
  uid=$(stat -f%u $0)
  gid=$(stat -f%g $0)
else
  uid=$(stat -c%u $0)
  gid=$(stat -c%g $0)
fi

chown -R $uid.$gid /work/build
